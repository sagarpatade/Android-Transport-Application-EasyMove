<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add money to Porter credits"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹500"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- UPI Payment Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/upiAnyApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay by Any UPI app\nUse any UPI app on your phone to pay"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/upiPhonePe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhonePe"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/upiOneCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OneCard"
                android:padding="8dp" />

            <TextView
                android:id="@+id/otherUpiOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other UPI Options"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingTop="4dp"/>
        </RadioGroup>

        <!-- Card Payment Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit / Credit Cards"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <RadioButton
            android:id="@+id/cardOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit / Debit Card"
            android:padding="8dp" />

        <!-- Wallets Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallets"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/walletAmazonPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon Pay Balance"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/walletFreecharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freecharge"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/walletJiomoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jiomoney"
                android:padding="8dp" />
        </RadioGroup>

        <!-- Proceed Button -->
        <Button
            android:id="@+id/proceedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Pay ₹500"
            android:backgroundTint="#D3D3D3"
            android:textColor="#2196F3"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
